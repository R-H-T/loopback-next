{
  "name": "@loopback/repository-json-schema",
  "version": "0.11.2",
  "description": "Converts TS classes into JSON Schemas using TypeScript's reflection API",
  "engines": {
    "node": ">=8.9"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:apidocs": "lb-apidocs",
    "build": "lb-tsc",
    "clean": "lb-clean loopback-json-schema*.tgz dist* package api-docs",
    "pretest": "npm run build",
    "test": "lb-mocha \"DIST/__tests__/unit/**/*.js\" \"DIST/__tests__/integration/**/*.js\" \"DIST/__tests__/acceptance/**/*.js\"",
    "verify": "npm pack && tar xf loopback-json-schema*.tgz && tree package && npm run clean"
  },
  "author": "IBM",
  "license": "MIT",
  "keywords": [
    "LoopBack",
    "TypeScript",
    "JSON Schema"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@loopback/context": "^0.12.13",
    "@loopback/dist-util": "^0.3.7",
    "@loopback/metadata": "^0.9.12",
    "@loopback/repository": "^0.19.0",
    "@types/json-schema": "^7.0.1"
  },
  "devDependencies": {
    "@loopback/build": "^0.7.4",
    "@loopback/testlab": "^0.14.1",
    "@types/node": "^10.11.2",
    "ajv": "^6.5.0"
  },
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist*/src",
    "dist*/index*",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/strongloop/loopback-next.git"
  }
}
