  "license": "MIT",
  "dependencies": {
    "@loopback/dist-util": "^0.3.7",
    "p-event": "^2.0.0"
  },
  "devDependencies": {
    "@loopback/build": "^0.7.4",
    "@loopback/core": "^0.11.14",
    "@loopback/testlab": "^0.14.1",
    "@types/node": "^10.11.2",
    "@types/p-event": "^1.3.0",
    "@types/request-promise-native": "^1.0.15",
    "request-promise-native": "^1.0.5"
  },
  "files": [
    "README.md",
    "index.js",
    "dist",
    "src"
  ],
  "publishConfig": {
